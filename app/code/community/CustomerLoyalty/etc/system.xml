<?xml version="1.0"?>
<config>
    <sections>
        <checkout>
        	<groups>
                <payment_failed>
				    <fields>
				        <customer_mail translate="label comments">
				            <label>Send mail to customer</label>
				            <frontend_type>select</frontend_type>
				            <source_model>adminhtml/system_config_source_yesno</source_model>
				            <sort_order>1</sort_order>
				            <show_in_default>1</show_in_default>
				            <show_in_website>1</show_in_website>
				            <show_in_store>1</show_in_store>
				        </customer_mail>
				        <template_customer>
				            <label>Payment Failed Template for Customer Mail</label>
				            <frontend_type>select</frontend_type>
				            <source_model>adminhtml/system_config_source_email_template</source_model>
				            <sort_order>10</sort_order>
				            <show_in_default>1</show_in_default>
				            <show_in_website>1</show_in_website>
				            <show_in_store>1</show_in_store>
				        </template_customer>
				        <coupon>
				            <label>Customer get coupon</label>
				            <frontend_type>select</frontend_type>
				            <source_model>adminhtml/system_config_source_yesno</source_model>
				            <sort_order>20</sort_order>
				            <show_in_default>1</show_in_default>
				            <show_in_website>1</show_in_website>
				            <show_in_store>1</show_in_store>
				        </coupon>
				        <coupon_value>
				            <label>Coupon value</label>
				            <frontend_type>text</frontend_type>
				            <sort_order>30</sort_order>
				            <show_in_default>1</show_in_default>
				            <show_in_website>1</show_in_website>
				            <show_in_store>1</show_in_store>
				        </coupon_value>
				        <coupon_valid>
				            <label>Coupon valid until</label>
				            <frontend_type>text</frontend_type>
				            <validate>validate-date</validate>
				            <comment>Format yyyy-mm-dd (optional)</comment>
				            <sort_order>40</sort_order>
				            <show_in_default>1</show_in_default>
				            <show_in_website>1</show_in_website>
				            <show_in_store>1</show_in_store>
				        </coupon_valid>	
					</fields>
				</payment_failed>
        	</groups>
        </checkout>
	</sections>
</config>